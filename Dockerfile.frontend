# Frontend Dockerfile - Multi-stage build
FROM node:18-alpine AS builder

# Set working directory
WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm ci

# Copy frontend source code
COPY frontend/ ./

# Verify translation files exist before build
RUN ls -la public/messages/ || echo "WARNING: messages directory not found in public/"
RUN ls -la public/messages/*.json || echo "WARNING: JSON files not found in public/messages/"

# Build the application
RUN npm run build

# Verify translation files exist after build
RUN ls -la dist/messages/ || echo "ERROR: messages directory not found in dist/"
RUN ls -la dist/messages/*.json || echo "ERROR: JSON files not found in dist/messages/"

# Production stage with nginx
FROM nginx:alpine

# Install wget for healthcheck
RUN apk add --no-cache wget

# Copy built files from builder stage
COPY --from=builder /app/dist /usr/share/nginx/html

# Verify files are copied correctly
RUN ls -la /usr/share/nginx/html/messages/ || echo "ERROR: messages directory not found in nginx html/"
RUN ls -la /usr/share/nginx/html/messages/*.json || echo "ERROR: JSON files not found in nginx html/messages/"

# Copy nginx configuration
COPY nginx-docker.conf /etc/nginx/conf.d/default.conf

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]